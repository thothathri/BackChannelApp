<% if session[:current_user_id]!=nil %>
<% if User.find(session[:current_user_id]).role == 'admin' %>
<h1>Listing users</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% if user.username!='admin' %>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
<%= link_to 'Back', :controller => 'users', :action => 'admin_user' %>
<% end %>
<% end %>
